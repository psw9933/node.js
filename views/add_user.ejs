<!DOCTYPE html>
<html>
    <%- include public/head_link.ejs%>

<body>
  <ion-app>
    <ion-split-pane>
      <%- include public/aslide_left.ejs%>
      <ion-page class="ion-page" main>
        <ion-header>
          <ion-toolbar style="text-align:center">
            <ion-title color="danger">Upload User Page</ion-title>
          </ion-toolbar>
        </ion-header>
        <ion-content>
          <ion-card padding style="width:80%;height:90%;left: 10%;right: 20%;">
            <ion-card-content>
              <form action="/user/addUser" method="post" enctype="multipart/form-data">
                <ion-list>
                  <ion-item>
                    <ion-label slot="start"> userid: </ion-label>
                    <ion-input type="text" name="userid"> </ion-input>
                  </ion-item>
                  <ion-item>
                    <ion-label slot="start"> password: </ion-label>
                    <ion-input type="text" name="password"> </ion-input>
                  </ion-item>
                  <ion-item>
                    <ion-label slot="start"> picture:</ion-label>
                    <ion-input type="file" name="pic"> </ion-input>
                  </ion-item>
                </ion-list>
                <ion-toolbar slot="bottom">
                  <ion-button color="primary" type="submit" slot="end"> Add User </ion-button>
                </ion-toolbar>
              </form>
            </ion-card-content>
          </ion-card>
        </ion-content>
      </ion-page>
    </ion-split-pane>
  </ion-app>
</body>


</html>